{% extends "PnpcTortueHermannBundle::layout.html.twig" %}
 
{% block title %}
  Suppression - {{ parent() }}
{% endblock %}
 
{% block intern_body %}
 

  <h2>Supprimer un document</h2>

  <p>
    Etes-vous certain de vouloir supprimer l'enregistrement nÂ° {{ documents.id }} ?
  </p>

  {# On met l'id de l'article dans la route de l'action du formulaire #}
  <form action="{{ path('pnpc_scops_supprimerdoc', {'id': documents.id}) }}" method="post">
