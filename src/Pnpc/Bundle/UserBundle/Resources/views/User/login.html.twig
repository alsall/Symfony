{% extends "PnpcUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

<div class="login">
<h1>Appli Web du Parc </h1>
<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
<p>
    <label for="username">{{ 'security.login.username'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" /></p>

    <label for="password">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="password" name="_password" required="required" />
    {% if error %}
    <div style="color:red;">{{ error|trans }}</div>
    {% endif %}
    <label>Equipe de Baguage</label>
    <select name="_target_path"required="required" >
  		<option selected disabled>--------choix de l'Ã©quipe--------</option>
  		<option value="/Scops">Scops</option>
  		<option value="/TortueHermann">Tortue d'Hermann</option>
  		<option value="/CistudeEurope">Cistude d'Europe</option>
  		<option value="/admin">Administration</option>
	</select>
    <p class="remember_me">
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label  for="remember_me">{{ 'security.login.remember_me'|trans }}</label></p>

    <p class="submit"><input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" /></p>
</form>
</div>
{% endblock fos_user_content %}